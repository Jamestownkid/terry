{
  "compilerOptions": {
    "target": "ES2022",
    "module": "CommonJS",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "dist/main",
    "rootDir": "src",
    "declaration": false
  },
  "include": ["src/main/**/*", "src/services/**/*"],
  "exclude": ["src/**/*.tsx", "src/renderer/**/*", "src/remotion/**/*"]
}
